generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum FeedType {
  SCHEDULED
  MANUAL
}

enum WeekDays {
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
}

model FeedHistory {
  id        String   @id @default(cuid(2))
  type      FeedType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("feed_histories")
}

model FeedSchedule {
  id        String     @id @default(cuid(2))
  isEnabled Boolean    @default(true)
  days      WeekDays[]
  time      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("feed_schedules")
}
